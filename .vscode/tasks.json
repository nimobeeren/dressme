{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start DB and App",
      "dependsOn": ["Start DB", "Start App"],
      "dependsOrder": "parallel",
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": []
    },
    {
      "label": "Start DB",
      "type": "shell",
      // Wrap command in some magic to keep the shell open after interrupting the process
      "command": "trap '' INT; docker compose up; $SHELL",
      "options": {
        "cwd": "${workspaceFolder}/api"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "close": false
      },
      "problemMatcher": []
    },
    {
      "label": "Start App",
      "type": "shell",
      // Wrap command in some magic to keep the shell open after interrupting the process
      "command": "trap '' INT; pnpm run dev ; $SHELL",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "close": false
      },
      "problemMatcher": []
    }
  ]
}
